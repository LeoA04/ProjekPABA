<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Image of the Marketing Service -->
    <ImageView
        android:id="@+id/transactionImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/baseline_camera_alt_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name of the Marketing Service -->
    <TextView
        android:id="@+id/transactionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Marketing Service Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/transactionImageView"
        app:layout_constraintTop_toTopOf="@id/transactionImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Marketing Social Media" />

    <!-- Price of the Marketing Service -->
    <TextView
        android:id="@+id/transactionPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Rp 1.000.000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/transactionImageView"
        app:layout_constraintTop_toBottomOf="@id/transactionName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rp 1.000.000" />

    <!-- Quantity Selector -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/transactionImageView"
        app:layout_constraintTop_toBottomOf="@id/transactionPrice"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Minus Button -->
        <Button
            android:id="@+id/minusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="-"
            android:textSize="14sp" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/quantityText"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp" />

        <!-- Plus Button -->
        <Button
            android:id="@+id/plusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="+"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>